<h1>Suas Conversas</h1>

<ul>
  <% @conversations.each do |conversation| %>
    <li>
      <%= link_to "Conversa com #{conversation.sender == current_user ? conversation.recipient.name : conversation.sender.name}", conversation %>
    </li>
  <% end %>
</ul>

<h2>Iniciar nova conversa</h2>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, conversations_path(recipient_id: user.id), method: :post %>
    </li>
  <% end %>
</ul>
