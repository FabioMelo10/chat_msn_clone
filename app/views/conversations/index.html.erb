<h1 class="mb-3">Suas Conversas</h1>

<ul class="list-group mb-4">
  <% @conversations.each do |conversation| %>
    <li class="list-group-item">
      <%= link_to "Conversa com #{conversation.sender == current_user ? conversation.recipient.name : conversation.sender.name}", conversation, class: "text-decoration-none" %>
    </li>
  <% end %>
</ul>

<h2 class="mb-3">Iniciar nova conversa</h2>
<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item">
      <%= link_to user.name, conversations_path(recipient_id: user.id), method: :post, class: "text-decoration-none" %>
    </li>
  <% end %>
</ul>
